---
import HeaderMenu from "@/components/interface/menu/HeaderMenu.astro";
import Footer from "@/components/interface/Footer.astro";
import SEO from "@/components/interface/SEO.astro";
import { ClientRouter } from "astro:transitions";
interface Preload {
    as: string;
    href: string;
    type: string;
    rel?: "preload" | "prefetch";
    crossorigin?: string;
}

interface Props {
    title: string;
    description: string;
    preload?: Array<Preload>;
    canonical?: string;
    image?: string;
}
const { title, description, preload, canonical, image } = Astro.props;
import "@/styles/global.css";
---

<!doctype html>
<html lang="es">
    <head>
        <SEO
            canonical={canonical}
            description={description}
            image={image}
            preload={preload}
            title={title}
        />
        <ClientRouter />
    </head>
    <body class="relative bg-slate-900 overflow-x-hidden">
        <div
            class="absolute inset-0 -z-10 h-full w-full bg-[linear-gradient(to_right,#1e293b_1px,transparent_1px),linear-gradient(to_bottom,#1e293b_1px,transparent_1px)] bg-[size:6rem_4rem]"
        >
            <div
                class="absolute bottom-0 left-0 right-0 top-0 bg-[radial-gradient(circle_800px_at_100%_200px,#f97316,transparent)] opacity-30"
            >
            </div>
        </div>
        <HeaderMenu />
        <main>
            <slot />
        </main>
        <Footer />
    </body>
</html>

<style>
    html {
        scroll-behavior: smooth;
    }
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>
