interface MenuItem {
    title: string;
    price: number;
    description: string;
}

const menuItems: MenuItem[] = [
    {
        title: "Sopa Marinera",
        price: 14800,
        description: "Marisco Surtidos",
    },
    {
        title: "Consome de mariscos",
        price: 9500,
        description: "",
    },
    {
        title: "Chup√≠n",
        price: 17900,
        description: "(Caldillo de congrio con crema o leche)",
    },
    {
        title: "Caldillo Marino",
        price: 19900,
        description: "(Caldillo de congrio y mariscos surtidos)",
    },
    {
        title: "Paila Marina",
        price: 17800,
