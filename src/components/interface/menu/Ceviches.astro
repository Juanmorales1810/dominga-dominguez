---
import { HandPlatter } from "lucide-react";

interface MenuItem {
    title: string;
    price: number;
    description: string;
}

const menuItems: MenuItem[] = [
    {
        title: "Reineta o Tilapia",
        price: 16500,
        description: "(Cebolla morada, pimentón, cilantro y ajo)",
    },
    {
        title: "Mixto",
        price: 18500,
        description:
            "(Camarón nacional, salmón, reineta o tilapia, cebolla morada, pimentón, cilantro y ajo)",
    },
    {
        title: "Ceviche Peruano",
        price: 18500,
        description:
            "(Reineta o tilapia, cebolla morada pluma, cilantro, yuca, choclo peruano, ají rocoto, leche de tigre, limón de pica)",
    },
    {
        title: "Ceviche Dominga",
        price: 18500,
        description: "(Salmón, apio, palta, queso crema)",
    },
    {
        title: "Ceviche de Pulpo",
        price: 17500,
        description: "(Cebolla morada, perejil, cilantro y ajo)",
    },
    {
        title: "Ceviche de Calamar",
        price: 17500,
        description:
            "(Cebolla morada, perejil, cilantro, salsa de tabasco y ajo)",
    },
];
function formatPrice(price: number): string {
    return price
        .toLocaleString("es-CL", { style: "currency", currency: "CLP" })
        .replace("CLP", "")
        .trim();
}
---

<section>
    <div class="container mx-auto md:px-4 py-20">
        <h1
            class="sticky z-20 bg-zinc-900/70 backdrop-blur-lg border-zinc-50/20 rounded-lg shadow-md py-2 top-16 w-full text-3xl font-bold text-center mb-4 text-primary"
        >
            Ceviches
            <HandPlatter size={32} className="inline-block" />
        </h1>
        <div class="grid gap-3 md:grid-cols-2 lg:grid-cols-3 px-4">
            {
                menuItems.map((item, index) => (
                    <div class="bg-zinc-400/10 backdrop-blur-lg border-zinc-50/20 rounded-lg shadow-md overflow-hidden">
                        <div class="p-6">
                            <div class="flex justify-between items-center mb-2">
                                <h2 class="text-xl font-semibold text-white">
                                    {item.title}
                                </h2>
                                <span class="text-lg font-bold text-primary">
                                    {formatPrice(item.price)}
                                </span>
                            </div>
                            <p class="text-zinc-300">{item.description}</p>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
